@page "{Id}"
@model Ediux.HomeSystem.Web.Pages.PluginsManager.UpdateModel
@{
}
@inherits HomeSystemPageBase
@section scripts {
<abp-script-bundle>
    <abp-script src="/Pages/PluginsManager/update.js" />
</abp-script-bundle>
}

<abp-card>
    <abp-card-header title="@L[HomeSystemResource.Features.PluginsManager.Prefix].Value"></abp-card-header>
    <abp-card-body>
        <form asp-page="/PluginsManager/Update" asp-route-Id="@Model.ViewModel.Id" id="form-page-update" method="post" enctype="multipart/form-data">
            <abp-input asp-for="ViewModel.Id" />
            <abp-input asp-for="ViewModel.Name" />
            <abp-input asp-for="ViewModel.PluginPath" />
            <abp-select asp-for="ViewModel.Disabled" asp-items="@Model.ModuleEnabledOptions" />
            <abp-input asp-for="ViewModel.AssemblyFile" type="File" accept=".dll,.zip" />

        </form>
    </abp-card-body>
    <abp-card-footer>
        <div class="clearfix">
            <button class="btn btn-md btn-primary float-left" type="submit" id="button-page-update">@L["Submit"].Value</button>
            <button class="btn btn-md btn-default float-right" type="button" id="button-page-cancel">@L["Cancel"].Value</button>
        </div>
    </abp-card-footer>
</abp-card>