@page
@inject IHtmlLocalizer<HomeSystemResource> L
@inject IPageLayout PageLayout
@model Ediux.HomeSystem.Web.Pages.PersonalCalendar.IndexModel
@{
    PageLayout.Content.Title = L[HomeSystemResource.Menu.PersonalCalendar].Value;
}
<abp-card>
    <abp-card-header>@L[HomeSystemResource.Menu.PluginsManager]</abp-card-header>
    <abp-card-body>
        <abp-container>
            <abp-row>
                <abp-column size="_12">
                    <abp-collapse-body id="collapseExample">
                        <form method="post">
                            
                            <abp-input asp-for="CalendarEvent.Title" type="text" />
                        </form>
                            <abp-dynamic-form abp-model="CalendarEvent" submit-button="true" />
                    </abp-collapse-body>
                </abp-column>
            </abp-row>
            <abp-row>
                <abp-column size="_12" id="calendar">
                </abp-column>
            </abp-row>
        </abp-container>
    </abp-card-body>
</abp-card>

@section styles {
    <abp-style-bundle name="fullcalendar" />
}
@section scripts {
    <abp-script-bundle name="fullcalendar" />
    <abp-script-bundle name="Ediux.HomeSystem.Web.Pages.PersonalCalendar.IndexModel" />
}