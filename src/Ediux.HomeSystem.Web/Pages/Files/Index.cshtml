@page
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Shared.Pages.Shared.Components.AbpPageToolbar
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Shared.Pages.Shared.Components.AbpPageSearchBox

@inherits Ediux.HomeSystem.Web.HomeSystemPageBase
@model Ediux.HomeSystem.Web.Pages.Files.IndexModel
@{
    PageLayout.Content.Title = L[HomeSystemResource.Menu.Files].Value;
    PageLayout.Content.BreadCrumb.Add(L[HomeSystemResource.Features.Files.Prefix].Value);
    PageLayout.Content.MenuItemName = HomeSystemMenus.Files;
}
@section scripts {
<abp-script-bundle>
    <abp-script src="/Pages/Files/index.js" />
</abp-script-bundle>
}

@section content_toolbar {
    @await Component.InvokeAsync(typeof(AbpPageToolbarViewComponent), new { pageName = typeof(Ediux.HomeSystem.Web.Pages.Files.IndexModel).FullName })
}

<abp-card class="mb-4">
    <abp-card-body>
        <div id="MyFilesWrapper">
            <abp-row>
                <abp-column>
                    @await Component.InvokeAsync(typeof(AbpPageSearchBoxViewComponent))
                </abp-column>
            </abp-row>
        </div>
    </abp-card-body>
</abp-card>

<abp-card>
    <abp-card-body>
        <abp-table striped-rows="true" id="dt-list" class="nowrap"></abp-table>
    </abp-card-body>
</abp-card>